<% if user_signed_in? %>
  <section class="main_wrapper">
    <div class="sub_header">
      <%= link_to "Home", current_user, class: "right buttons" %>
      <%= link_to "New Post", new_user_post_path(current_user), class: "left buttons" %>
    </div>
    <div class="top_margin">
    <h2 align="center"> All Bloggers </h2>
<% else %>
  <section id="posts_index_wrapper"> 
  <h2 align="center"> All Bloggers </h2>
  <div>
<% end %>
    <div align="center">
      <%= will_paginate @user %>
    </div>

    <%@users.each do |user|%>
      <ul class="listing" align="center">
        <li><h3><%= link_to user.full_name, user_path(user)%></h3></li>
        <li><%= gravatar_for user, size: 100 %></li>
        <small><em>Posts Counts: <%= user.posts.count %></em></small>
        <% if user_signed_in? && current_user.admin? %>
          <li><%= link_to "Delete", admin_destroy_user_path(user), 
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete this blogger and all his articles?" }, class: "links" %></li>
        <% end %>
        <div class ="line"></div>
      </ul>
    <% end %>
    <div align="center">
      <%= will_paginate %>
    </div>
  </div>
 </section> 