<% if user_signed_in? %>
  <section class="main_wrapper">
    <%= render 'shared/sub_header' %>
    <h2 align="center"> All Categories </h2>
<% else %>
  <section id="posts_index_wrapper"> 
  <h2 align="center"> All Categories </h2>
<% end %> 
  <div align="center" class="pagination_margin">
    <%= will_paginate %>
  </div>
  <% @categories.each do |category| %>
    <ul class="listing" align="center">
      <li><h2><%= link_to category.name, category_path(category) %></h2></li>
      <li><small><%= pluralize(category.posts.count, "article") %></small></li>
      <%if user_signed_in? && current_user.admin? %>
        <p><%= link_to "Edit", edit_category_path(category), :class => "links" %> |
        <%= link_to "Delete", category_path(category), method: :delete,
                              data: {confirm: "Delete the post?"}, :class => "links"%></p>
      <% end %> 
      <div class ="line"></div>
    </ul>
  <% end %> 
  <div align="center" class="pagination_margin">
    <%= will_paginate %>
  </div>
</section>