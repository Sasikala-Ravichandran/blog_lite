<%= form_for(@category) do |f| %>
  <% if @category.errors.any?%>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prevented from the saving </h2>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>  
  <% end %>
  
  <%= f.label :name%><br>
  <%= f.text_field :name %><br><br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>