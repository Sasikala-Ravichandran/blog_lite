<h2 align="center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "forms" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name, class: "labeling" %>
    <%= f.email_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "labeling" %>
    <%= f.email_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, class: "labeling" %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, class: "labeling" %>
    <%= f.password_field :password, autocomplete: "off" %>
    <div class="labeling">
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "labeling" %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
