<li>
  <%= link_to comment.user.full_name, user_path(comment.user), class: "link_tags" %>
  <span>&nbsp;&nbsp;<em><%= time_ago_in_words(comment.created_at) %></em></span>
  <p class="left_padding"><%= comment.content %></p>
  <% if user_signed_in? && (@post.user == current_user || current_user.admin?) %>
    <%= link_to "Delete", comment_path(comment), method: :delete, :class => "links" %>
  <% end %>
</li>
 